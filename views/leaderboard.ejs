    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" type="text/css" href="../graystyle.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/3.4.6/css/flag-icon.min.css">
    <title>Leaderboard</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href="/grade/profile">Home</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                  <li class="nav-item"><a class="nav-link" href="/grade/status">Submissions</a></li>
                  <li class="nav-item"><a class="nav-link" href="/grade/contests">Contests</a></li>
                  <li class="nav-item"><a class="nav-link" href="/grade/problemset">Problemset</a></li>
                  <li class="nav-item"><a class="nav-link" href="/grade/submit">Submit</a></li>
                  <li class="nav-item"><a class="nav-link" href="/grade/info">Rules and Info</a></li>
                  <li class="nav-item"><a class="nav-link" href="/grade/leaderboard">Leader Board</a></li>
                  <li class="nav-item"><a class="nav-link" href="/grade/rating">Rating Graph</a></li>
                </ul>
                <a class="navbar-brand ms-auto" href="https://activities.tjhsst.edu/ict/">
                  <img src="/images/TJ.jpeg" alt="Logo" height="40">
              </a>
            </div>
        </div>
    </nav>

    <div class="container leaderboard">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Global Ranking</h3>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">Rank</th>
                                <th scope="col">Username</th>
                                <th scope="col">Score</th>
                                <th scope="col">Time</th>
                                <th scope="col">Country</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">1</th>
                                <td><a href="/grade/rating?username=Dan">Dan Qiu</a></td>
                                <td>1500</td>
                                <td>1:23:45</td>
                                <td><span class="flag-icon flag-icon-us"></span> United States</td>
                            </tr>
                            <tr>
                                <th scope="row">2</th>
                                <td><a href="/grade/rating?username=Andrew">Andrew Chen</a></td>
                                <td>1400</td>
                                <td>1:35:21</td>
                                <td><span class="flag-icon flag-icon-ca"></span> Canada</td>
                            </tr>
                            <!-- Repeat for more rows -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
